    		logging.info("%s ùóòùóøùóøùóºùóø %s: %s%s%s" %(redBackground,end,red,e,end));time.sleep(5)
    		logging.info("%sReturning to main screen‚Ä¶%s" % (white,end));time.sleep(2)
    		
    
